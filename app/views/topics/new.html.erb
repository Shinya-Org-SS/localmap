<div class="topic-new-wrapper" >
<div class="container">
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %>
        <div class="form-group">
            <%= f.label :title,"タイトル" %>
            <%= f.text_area :title, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :station,"最寄駅" %>
            <%= f.text_area :station, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :picture_1,"写真" %>
            <%= f.file_field :picture_1 %>
        </div>

        <div class="form-group">
            <%= f.label :description,"コメント" %>
            <%= f.text_area :description, class: 'form-control' %>
        </div>

        <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
    </div>
    </div>
  </div>
</div>